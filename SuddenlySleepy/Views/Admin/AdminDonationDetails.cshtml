@model SuddenlySleepy.Models.Donation

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Donation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DonationAmount)
        </dt>
        <dd class="col-sm-2">
            @Html.DisplayFor(model => model.DonationAmount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Donor.UserName)
        </dt>
        @if (Model.Donor == null)
        {
            <dd class="col-sm-2">Anonymous</dd>
        }
        else
        {
            <dd class="col-sm-2">@Html.DisplayFor(model => model.Donor.UserName)</dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DonationDate)
        </dt>
        <dd class="col-sm-2">
            @Model.DonationDate.ToShortDateString()
        </dd>
    </dl>
</div>

